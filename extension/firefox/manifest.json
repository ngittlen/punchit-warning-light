{
  "manifest_version": 3,
  "name": "Punch-Up Light",
  "version": "1.0.0",
  "description": "Scrapes punch data from punchit.atomicobject.com and controls a Kasa smart light",
  "author": "Nate Gittlen",
  "homepage_url": "https://github.com/ngittlen/punchit-warning-light",

  "browser_specific_settings": {
    "gecko": {
      "id": "punch-up-alert@atomicobject.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["websiteContent"]
      }
    }
  },

  "permissions": [
    "storage",
    "nativeMessaging",
    "alarms"
  ],

  "host_permissions": [
    "https://punchit.atomicobject.com/*"
  ],

  "background": {
    "scripts": ["light-controller.js", "background.js"]
  },

  "content_scripts": [{
    "matches": ["https://punchit.atomicobject.com/newpunch.php*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Punch-Up Light"
  },

  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}
{
  "manifest_version": 3,
  "name": "Punch-Up Light",
  "version": "1.0.0",
  "description": "Scrapes punch data from punchit.atomicobject.com and controls a Kasa smart light",

  "permissions": [
    "alarms",
    "storage",
    "nativeMessaging"
  ],

  "host_permissions": [
    "https://punchit.atomicobject.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": ["https://punchit.atomicobject.com/newpunch.php*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Punch-Up Light"
  },

  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}